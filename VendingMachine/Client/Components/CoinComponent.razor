<div class="card col-xl-2 col-xl-2 col-md-4 p-1 my-1 mx-3">
    <div class="card-header text-center bg-black text-light mx-1 row">
        <div>@CoinName</div>
    </div>
    <div class="card-body row">
        <img src="@ImageURL" class="img-fluid" />
    </div>
    <div class="card-footer d-flex justify-content-center">
        Available: @AvailableAmount
    </div>
    <div class="card-footer d-flex justify-content-center">
        <button class="btn btn-success" @onclick="(() => OnClick.InvokeAsync(coinType))">Deposit</button>
    </div>
</div>


@code {
    [Parameter] public CoinTypeEnum coinType { get; set; }
    [Parameter] public string CoinName { get; set; }
    [Parameter] public string ImageURL { get; set; }
    [Parameter] public int AvailableAmount { get; set; }

    [Parameter] public EventCallback<CoinTypeEnum> OnClick { get; set; }
}
