@page "/changepassword"

<PageTitle>Change Password</PageTitle>


<h2 class="align-content-center text-center">Register</h2>

<MessageBarComponent InputMessage="@message"></MessageBarComponent>

@if (IsBusy)
{
    <LoadingIndicationComponent></LoadingIndicationComponent>
}
else if (!ChangePasswordSuccessfully)
{
    <EditForm Model="user" OnValidSubmit="HandleChangePassword">
        <DataAnnotationsValidator />
        <div class="mb-3">
            <label for="password">Password</label>
            <InputText id="password" @bind-Value="user.Password" class="form-control" type="password" />
            <ValidationMessage For="@(() => user.Password)" />
        </div>
        <div class="mb-3">
            <label for="confirmPassword">Confirm Password</label>
            <InputText id="confirmPassword" @bind-Value="user.ConfirmPassword" class="form-control" type="password" />
            <ValidationMessage For="@(() => user.ConfirmPassword)" />
        </div>
        <button type="submit" class="btn btn-primary">Save password</button>
    </EditForm>
}